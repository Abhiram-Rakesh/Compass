<style>
  .search-btn {
    background-color: #fe424d;
    color: white;
    border-radius: 1rem;
    padding: 0 1rem 0 1rem;
  }

  .search-btn:hover {
    background-color: #fe424d;
    color: white;
    border-radius: 1rem;
    padding: 0 1rem 0 1rem;
  }

  .search-input {
    border-radius: 1rem;
    padding: 0.5rem 3rem 0.5rem 6rem;
    font-size: 0.9rem;
  }

  .new-listing {
    border: 1px solid lightgray;
    border-radius: 1rem;
    padding: 0.5rem 1rem 0.5rem 1rem;
    background-color: lightgray;
    opacity: 0.8;
  }

  .new-listing:hover {
    opacity: 1;
  }

  .regis {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    border: 1px solid lightgray;
    border-radius: 1rem;
    margin-top: 1rem;
    margin-bottom: 1rem;
  }

  .regis-content {
    padding: 0.1rem 0.25rem 0.1rem 0.25rem;
  }

  .divide {
    color: lightgray;
  }

  .side-nav {
    display: flex;
    align-items: center;
  }

  .explore-nav {
    border: 1px solid lightgray;
    background-color: lightgray;
    border-radius: 1rem;
    opacity: 0.8;
    padding: 0.5rem 1rem 0.5rem 1rem;
  }

  .explore-nav:hover {
    opacity: 1;
  }

  .logout {
    border: 1px solid lightgray;
    border-radius: 1rem;
  }
</style>
<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav ">
        <a class="nav-link" href="/listings">
          <div class="explore-nav">
            <i class="fa-solid fa-map-location-dot"></i>&nbsp;Explore
          </div>
        </a>
      </div>
      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <input class="form-control me-2 search-input" type="search" placeholder="Search destinations" />
          <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
        </form>
      </div>
      <div class="navbar-nav ms-auto side-nav">
        <a class="nav-link" href="/listings/new">
          <div class="new-listing">
            <i class="fa-solid fa-plus"></i>&nbsp;Add new Listing
          </div>
        </a>
        <% if(!currUser) {%>
          <div class="regis">
            <div class="regis-content">
              <a class="nav-link " aria-current="page" href="/signup"><b>Sign Up</b></a>
            </div>
            <div class="regis-content">
              <b class="divide">|</b>
            </div>
            <div class="regis-content">
              <a class="nav-link" href="/login"><b>Log In</b></a>
            </div>
          </div>
          <% }%>
            <%if(currUser){%>
              <a class="nav-link logout" href="/logout"><b>Log Out</b></a>
              <% } %>
      </div>
    </div>
  </div>
</nav>
